<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:orientation="horizontal" >
    <ImageView
        android:id="@+id/drh_lockscreen_actions_action_icon"
        android:layout_width="70dip"
        android:layout_height="70dip"
        android:maxHeight="70dip"
        android:maxWidth="70dip"
        android:layout_marginTop="5dip"
        android:layout_marginRight="5dip"
        android:layout_marginBottom="5dip"
        android:layout_marginLeft="5dip"
        android:scaleType="centerInside"
        />
    <TextView
        android:layout_width="0dip"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:id="@+id/drh_lockscreen_actions_action_text"
        style="@android:style/TextAppearance.Large" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <Button
            android:id="@+id/drh_lockscreen_actions_action_add"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/drh_lockscreen_actions_action_add"
            android:textSize="15dp"/>
        <Button
            android:id="@+id/drh_lockscreen_actions_action_remove"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/drh_lockscreen_actions_action_remove"
            android:textSize="15dp"/>

    </LinearLayout>
</LinearLayout>
